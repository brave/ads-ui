{
  "extends": [
    "local>brave/renovate-config",
    "config:js-app",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    "npm:unpublishSafe",
    "helpers:pinGitHubActionDigests",
    "group:allNonMajor",
    "schedule:weekends"
  ],
  "labels": ["dependencies"],
  "postUpdateOptions": ["pnpmDedupe"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "enabled": true
    }
  ]
